#==============================
# Practicing makefile syntaxs.
#==============================

include makefileResources.mk
#==============================================================
.PHONY: clean

Build=./build
OBJ_FILES := $(patsubst %.c, %.o, $(SRC))
#==============================================================

build: $(OBJ_FILES)
	gcc -o $(Build)/main $(Build)/$(notdir $<)

#==============================================================

%.o: %.c
	gcc -c $< -o $(Build)/$(notdir $@)
#==============================================================

clean:
	rm -rf ./build/* ./**/*.o
